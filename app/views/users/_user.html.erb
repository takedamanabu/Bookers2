  <table class="table">
   <tbody>
    <tr></tr>
     <tr>
     <th>name</th>
     <th><%= user.name %></th>
    </tr>
    <tr>
     <th>introduction</th>
     <td><%= user.introduction %></td>
     <th></th>
    </tr>
    <th colspan="2">
     <%= link_to "編集", edit_user_path(user)  %>
    </th>
   </tbody>
  </table>

<h2>New book</h2>

<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>
</dv>

