<div class="container">
<div class="row">
 <div class="col-3">
  <%= render 'user', user: @user, book: @book %>
 </div>
 <div class="col-9">
  <h2>Books</h2>
  <table class="table">
   <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
    </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>

    </tr>
    <% end %>
   </tbody>
  </table>
   </tr>
 </div>
</div>
</div>