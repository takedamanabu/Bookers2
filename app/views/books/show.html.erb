<div class="container">
<div class="row">
    <p class="text-success"><%= flash[:notice] %></p>
    <div class="col-log-3">
     <%= render 'users/user', user: @user, book: @book %>
</div>
<div class="col-log-9">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= @user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book.id), class:'btn btn-success btn-sm' %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), method: :delete,  data: { confirm: "Are you sure?" }, class:'btn btn-danger btn-sm' %></td>
          <% end %>
        </tr>
      </table>
</div>
</div>
